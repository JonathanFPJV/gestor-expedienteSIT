{
  "name": "sit-gestor-vehiculos",
  "version": "1.0.0",
  "main": "app/main.js",
  "productName": "SIT Gestor Vehículos",
  "scripts": {
    "start": "electron .",
    "build": "npm run backup && electron-builder --win --x64",
    "build:portable": "npm run backup && electron-builder --win --x64 && node scripts/create-portable-marker.js",
    "dist": "npm run backup && electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps",
    "backup": "node scripts/backup-data.js",
    "restore": "node scripts/restore-data.js"
  },
  "keywords": [
    "electron",
    "sqlite",
    "sitransporte"
  ],
  "author": "SITransporte Dev Team",
  "license": "ISC",
  "description": "Sistema de gestión y consulta de actas de resolución y tarjetas de vehículos.",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.394",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.sitransporte.gestor",
    "copyright": "Copyright © 2025 SITransporte Arequipa",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "src/**/*",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "build/AppSIT.ico"
    }
  }
}
